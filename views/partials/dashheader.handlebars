<main class="main dashboard">
    <div class="container">

        {{!-- date text --}}
        <div class="col-lg-12">
            <div class="dashboard-title-layout" id="date-chooser">
                <h1 class="dashboard-title"><i class="fas fa-calendar-day" style="padding-right: 20px;"></i>Thu 4/8/2021
                </h1>
            </div>
        </div>

        {{!-- progress details --}}
        <div class="row">

            {{!-- calories info --}}
            <div class="col-lg-3" style="padding-top: 40px;">
                <h3 class="foreground-white regular elevation justify-center bottom-md">Calories</h3>
                <h2 class="foreground-white emphasis elevation justify-center bottom-lg" id="daily-alorie-count">2000
                    left</h2>
                <div class="progress">
                    <div id="progress-bar-calories" class="progress-bar progress-bar-striped progress-bar-animated"
                        role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 75%">
                    </div>
                </div>
            </div>

            {{!-- Proteins info --}}
            <div class="col-lg-3" style="padding-top: 40px;">
                <h3 class="foreground-white regular elevation justify-center bottom-md">Proteins</h3>
                <h2 class="foreground-white emphasis elevation justify-center bottom-lg" id="daily-protein-count">11.3g
                    left</h2>
                <div class="progress">
                    <div id="progress-bar-proteins" class="progress-bar progress-bar-striped progress-bar-animated"
                        role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 40%">
                    </div>
                </div>
            </div>

            {{!-- Carbs info --}}
            <div class="col-lg-3" style="padding-top: 40px;">
                <h3 class="foreground-white regular elevation justify-center bottom-md">Carbs</h3>
                <h2 class="foreground-white emphasis elevation justify-center bottom-md" id="daily-carb-count">48g left
                </h2>
                <div class="progress">
                    <div id="progress-bar-carbs" class="progress-bar progress-bar-striped progress-bar-animated"
                        role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 50%">
                    </div>
                </div>
            </div>

            {{!-- Fats info --}}
            <div class="col-lg-3" style="padding-top: 40px;">
                <h3 class="foreground-white elevation justify-center bottom-md">Fats</h3>
                <h2 class="foreground-white emphasis elevation justify-center bottom-lg" id="daily-fat-count">83g left
                </h2>
                <div class="progress">
                    <div id="progress-bar-fats" class="progress-bar progress-bar-striped progress-bar-animated"
                        role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 60%">
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>